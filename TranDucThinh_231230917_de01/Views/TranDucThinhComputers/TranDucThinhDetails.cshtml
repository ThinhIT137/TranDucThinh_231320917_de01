@model TranDucThinh_231230917_de01.models.TranDucThinhComputer

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h2 class="text-center fw-bold text-primary mb-4">Chi tiết máy tính</h2>
    <hr />

    <div class="card shadow-sm border-0 rounded-3 mx-auto" style="max-width: 700px;">
        <div class="card-body bg-light p-4">
            <div class="row mb-3">
                <div class="col-md-4 fw-semibold text-secondary">Tên máy:</div>
                <div class="col-md-8">@Model.TranDucThinhComName</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-semibold text-secondary">Giá:</div>
                <div class="col-md-8 text-danger fw-bold">
                    @string.Format("{0:N0} VNĐ", Model.TranDucThinhComPrice)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-semibold text-secondary">Hình ảnh:</div>
                <div class="col-md-8">
                    <img src="@Model.TranDucThinhComImage"
                         alt="@Model.TranDucThinhComName"
                         class="img-thumbnail shadow-sm"
                         style="max-width: 200px; height: auto;" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 fw-semibold text-secondary">Trạng thái:</div>
                <div class="col-md-8">
                    @if (Model.TranDucThinhComStatus == true)
                    {
                        <span class="badge bg-success px-3 py-2">Còn hàng</span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2">Hết hàng</span>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="TranDucThinhEdit" asp-route-id="@Model?.TranDucThinhComId" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>
                <a asp-action="TranDucThinhIndex" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
