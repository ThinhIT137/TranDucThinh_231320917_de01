@model IEnumerable<TranDucThinh_231230917_de01.models.TranDucThinhComputer>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center fw-bold text-primary">Danh sách máy tính</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-primary" asp-action="TranDucThinhCreate">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Tên máy</th>
                    <th>Giá (VNĐ)</th>
                    <th>Hình ảnh</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.TranDucThinhComName</td>
                        <td>@string.Format("{0:N0}", item.TranDucThinhComPrice)</td>
                        <td>
                            <img src="@item.TranDucThinhComImage"
                                 alt="@item.TranDucThinhComName"
                                 class="img-thumbnail"
                                 style="max-width:100px; height:auto;" />
                        </td>
                        <td>
                            @if (item.TranDucThinhComStatus == true)
                            {
                                <span class="badge bg-success">Còn hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Hết hàng</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="TranDucThinhEdit"
                                   asp-route-id="@item.TranDucThinhComId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-outline-info"
                                   asp-action="TranDucThinhDetails"
                                   asp-route-id="@item.TranDucThinhComId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-sm btn-outline-danger"
                                   asp-action="TranDucThinhDelete"
                                   asp-route-id="@item.TranDucThinhComId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
